<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubscriberBillPaymentActivity">

    <TextView
        android:id="@+id/system_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borç Ödeme"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/info_text_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/continue_button"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/info_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aralık Ayı Fatura"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/info_text_2"
        app:layout_constraintLeft_toLeftOf="@+id/info_text_2"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/system_text" />

    <TextView
        android:id="@+id/info_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ödenecek Tutar"
        app:layout_constraintBottom_toTopOf="@+id/current_bill_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/info_text_1" />

    <TextView
        android:id="@+id/fakering_text"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/blue_ring"
        android:text="a"
        android:textColor="@color/imu_blue"
        android:textSize="1dp"
        app:layout_constraintBottom_toTopOf="@+id/info_text_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/info_text_1" />

    <TextView
        android:id="@+id/current_bill_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/info_text_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/info_text_1"
        android:textColor="@color/imu_blue" />

    <TextView
        android:id="@+id/info_text_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İBAN:"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/info_text_2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/month_11_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TR42-6000-0006-9000-0009"
        app:layout_constraintLeft_toLeftOf="@+id/info_text_5"
        app:layout_constraintTop_toBottomOf="@+id/info_text_5" />

    <Button
        android:id="@+id/continue_button"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:text="Banka Sitesine Git"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_text_5" />

</androidx.constraintlayout.widget.ConstraintLayout>